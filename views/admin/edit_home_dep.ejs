<%-include("navbar.ejs")%>


<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">Edit Information</h3>
        <div class="tab-content mt-3">
            <!-- Mobile Number -->
            <div >
                <form action="/admin/save_edit_department" method="post" >

                    <input type="text" class="form-control" name="edit_dept_id" value="<%-departments.dept_id%>" hidden>

                    <div class="mb-3">
                        <label class="form-label">Edit Doctors Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="edit_dept_name" value="<%-departments.dept_name%>" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Edit Doctors Expireance in</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="edit_dept_desc" value="<%-departments.dept_desc%>" required>
                        </div>
                    </div>
           
                    <button type="submit" class="btn btn-primary w-100">Edit Doctors</button>
                </form>
            </div>
        </div>
    </div>
</div>


