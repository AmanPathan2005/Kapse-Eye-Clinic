<%-include("header.ejs")%>
   

    <div id="header-placeholder"></div>
<!-- Appointment Booking Section -->
<div class="container my-5">
    <div class="row justify-content-center overflow-hidden">
        <div class="col-md-8">
            <div class="appointment-form" data-aos="fade-up" data-aos-duration="1000">
                <h3 class="text-center text-primary"><i class="fas fa-calendar-check"></i> Book an Appointment</h3>
                
                <hr>

                <form action="/save_appointments" method="post">
                    <div class="mb-3" data-aos="fade-right" data-aos-delay="200">
                        <label for="name" class="form-label"><i class="fas fa-user"></i> Full Name</label>
                        <input type="text" class="form-control" name="patient_name" placeholder="Enter your name" required>
                    </div>

                    <div class="mb-3" data-aos="fade-left" data-aos-delay="300">
                        <label for="email" class="form-label"><i class="fas fa-envelope"></i> Email Address</label>
                        <input type="email" class="form-control" name="patient_email" placeholder="Enter your email" required>
                    </div>

                    <div class="mb-3" data-aos="fade-right" data-aos-delay="400">
                        <label for="phone" class="form-label"><i class="fas fa-phone"></i> Phone Number</label>
                        <input type="tel" class="form-control" name="patient_phone" placeholder="Enter your phone number" required>
                    </div>

                    <div class="mb-3" data-aos="fade-left" data-aos-delay="500">
                        <label for="date" class="form-label"><i class="fas fa-calendar"></i> Select Date</label>
                        <input type="text" class="form-control datepicker" name="appointment_date" placeholder="Choose date" required>
                    </div>

                    <div class="mb-3" data-aos="fade-right" data-aos-delay="600 overflow-hidden">
                        <label for="time" class="form-label"><i class="fas fa-clock"></i> Select Time</label>
                        <select class="form-select" name="appointment_time" required>
                            <option selected disabled>Select Time</option>
                            <option>9:00 AM</option>
                            <option>10:00 AM</option>
                            <option>11:00 AM</option>
                            <option>2:00 PM</option>
                            <option>3:00 PM</option>
                            <option>4:00 PM</option>
                        </select>
                    </div>

                    <div class="mb-3" data-aos="fade-left" data-aos-delay="700">
                        <label for="message" class="form-label"><i class="fas fa-comment"></i> Message (Optional)</label>
                        <textarea class="form-control" name="message" rows="3" placeholder="Enter any additional details"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-100" data-aos="zoom-in" data-aos-delay="800">
                        <i class="fas fa-paper-plane"></i> Submit Appointment
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap & jQuery -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- AOS Animation JS -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

<!-- Datepicker JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

<script>
    // Initialize AOS animations
    AOS.init({
        duration: 1000,
        easing: 'ease-in-out',
        once: true
    });

    // Initialize Datepicker
    $(document).ready(function() {
        $('.datepicker').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true,
            todayHighlight: true
        });
    });
</script>
<div id="Footer-placeholder"></div>

<%-include("Footer.ejs")%>
